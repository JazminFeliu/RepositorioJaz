Algoritmo primerSegun
	numeroDia = 0;
	
	Mientras (numeroDia < 1 o numeroDia > 7) Hacer
		
		Escribir "Ingresá el dia";
		Leer numeroDia;
		
	FinMientras
	
	
	//Utilizamos la estructura switch case
	
	Segun numeroDia Hacer
		1:
			Escribir "Es lunes";
		2:
			Escribir "Es martes";
		3:
			Escribir "Es miércoles";
		4:
			Escribir "Es jueves";
		5:
			Escribir "Es viernes";
		6:
			Escribir "Es sábado";
		7: 
			Escribir "Es domingo";
	
	Fin Segun
	
FinAlgoritmo
